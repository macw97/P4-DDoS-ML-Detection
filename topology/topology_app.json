{
    "p4_src": "main.p4",
    "cli": true,
    "pcap_dump": true,
    "enable_log": true,
    "topology": {
        "assignment_strategy": "mixed",
        "links": [["h1", "s1"],
            ["s1", "s2"],
            ["s1", "s3"],
            ["s3", "s2"], 
            ["h2", "s2"], 
            ["h3", "s3"]
    ],
    "hosts": {
        "h1": {
            "dhcp": false,
            "log_enabled": true,
            "log_dir": "topology/hosts/h1"
        },
        "h2": {
            "dhcp": false,
            "log_enabled": true,
            "log_dir": "topology/hosts/h2"

        },
        "h3": {
            "dhcp": false,
            "log_enabled": true,
            "log_dir": "topology/hosts/h3"
        }
    },
    "switches": {
        "s1": {
            "cli_input": "topology/s1-runtime_command.txt"
        },
        "s2": {
            "cli_input": "topology/s2-runtime_command.txt"
        },
        "s3": {
            "cli_input": "topology/s3-runtime_command.txt"
        }
    }
    }
}